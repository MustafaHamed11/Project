    private void jButtonFilterByLecturerActionPerformed(java.awt.event.ActionEvent evt) {                                                        
               String lecturerName = (String) jComboBoxLecturers.getSelectedItem();
                  Lecturer lecturer = LecturerHandler.getLecturerByName(lecturerName);

                       String dayName =  (String) jComboBoxDays.getSelectedItem();
                       Day day = DayHandler.getDayByName(dayName);
                       
                
                        // fill period table with this filterations
                       getPeriodsByLecturerDay(lecturer, day);
                       
                  
                       // fill rooms of this Group
                       getDivisionsByLecturer(lecturer);
                       
                       // set fields
                       jTextFieldLecturerName.setText(lecturer.getLecturerName());
                       jTextFieldLecturerNamePrd.setText(lecturer.getLecturerName());
                       jTextFieldSelectedDayName.setText(day.getDayName());

    }                                                       

    private void jButtonAddDivisionActionPerformed(java.awt.event.ActionEvent evt) {                                                   
       int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            // 0. read Fields
   Lecturer lecturer = LecturerHandler.getLecturerByName( jTextFieldLecturerName.getText() ) ;

           String divisionName = (String) jComboBoxAddDivision.getSelectedItem();
          Division division = DivisionHandler.getDivisionByName(divisionName);
            
            // 1. Add row to DB
            DivisionHandler.assignDivisionToLecturer(division, lecturer);

            // 2. Add row to JTable
            DefaultTableModel tm = (DefaultTableModel) jTableDivisions.getModel();
            Object[] rowData = {division.getDivisionId(), division.getDivisionName() };

            tm.addRow(rowData);

            /// refresh
    //        tm.setRowCount(0);
  //          getAllDivisions();

            // 3. Empty fields
//            emptyFieldsDivisions();

            // 4. show Save Msg
            JOptionPane.showMessageDialog(null, "Data Saved Done", "Saving..", JOptionPane.INFORMATION_MESSAGE);
        }

    }                                                  

    private void jButtonAddPeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        
        
        int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            // 0. read Fields
   Lecturer lecturer = LecturerHandler.getLecturerByName( jTextFieldLecturerNamePrd.getText() );

           String periodName = (String) jComboBoxPeriods.getSelectedItem();
                   Period period = PeriodHandler.getPeriodByName(periodName);
            
            // 1. Add row to DB
            PeriodHandler.assignPeriodToLecturer(period, lecturer);

            // 2. Add row to JTable
            DefaultTableModel tm = (DefaultTableModel) jTablePeriodsLecturers.getModel();
            Object[] rowData = {period.getPeriodId(), period.getPeriodName(),
            period.getStartTime().getTimeText(), period.getEndTime().getTimeText()};

            tm.addRow(rowData);

            /// refresh
    //        tm.setRowCount(0);
  //          getAllDivisions();

            // 3. Empty fields
//            emptyFieldsDivisions();

            // 4. show Save Msg
            JOptionPane.showMessageDialog(null, "Data Saved Done", "Saving..", JOptionPane.INFORMATION_MESSAGE);
        }

    }                                                

    private void jButtonDeleteDivisionActionPerformed(java.awt.event.ActionEvent evt) {                                                      

        int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            //1. read user id
           Lecturer lecturer = LecturerHandler.getLecturerByName(jTextFieldLecturerName.getText());
            Division division = DivisionHandler.getDivisionByName(jTextFieldSelectedDivisionName.getText());
            
      
            
    //2. del from db
            DivisionHandler.deassignDivisionFromLecturer(lecturer, division);

            // 3. remove From JTable
            DefaultTableModel tm = (DefaultTableModel) jTableDivisions.getModel();
            tm.removeRow(jTableDivisions.getSelectedRow());

            // 4. empty Fields
    //        emptyFieldsLecturers();
  //          LogHandler.insertLog(9, 3, "Delete Consolate Ok - Consolate  : " + logDeletedConsolateName);
        // reset
            jTextFieldSelectedDivisionId.setText(null);
            jTextFieldSelectedDivisionName.setText(null);
        }

    }                                                     

    private void jButtonDeletePeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                    
   int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            //1. read user id
           Lecturer lecturer = LecturerHandler.getLecturerByName(jTextFieldLecturerNamePrd.getText());
            Period period = PeriodHandler.getPeriodByName(jTextFieldSelectedPeriodName.getText());
            
    //2. del from db
            PeriodHandler.deassignPeriodFromLecturer(lecturer, period);

            // 3. remove From JTable
            DefaultTableModel tm = (DefaultTableModel) jTablePeriodsLecturers.getModel();
            tm.removeRow(jTablePeriodsLecturers.getSelectedRow());

            // 4. empty Fields
    //        emptyFieldsLecturers();
  //          LogHandler.insertLog(9, 3, "Delete Consolate Ok - Consolate  : " + logDeletedConsolateName);
      // reset
              jTextFieldSelectedPeriodId.setText(null);
              jTextFieldSelectedPeriodName.setText(null);
        }

    }                                                   

