    private void getPeriodsByLecturerDay(Lecturer lecturer, Day day) {
         ArrayList<Period> periodsList = PeriodHandler.getPeriodsByLecturerDay(lecturer, day);
        // 2. Add Rows to JTable
        DefaultTableModel tm = (DefaultTableModel) jTablePeriodsLecturers.getModel();
   tm.setRowCount(0);
        for (Period period : periodsList) {
            Object[] rowData = {period.getPeriodId(), period.getPeriodName(),
                period.getStartTime().getTimeText(), period.getEndTime().getTimeText()};

            tm.addRow(rowData);
        }

    }

    private void getDivisionsByLecturer(Lecturer lecturer) {
         
        ArrayList<Division> divisionsList = DivisionHandler.getDivisionsByLecturer(lecturer);
        // 2. Add Rows to JTable
        DefaultTableModel tm = (DefaultTableModel) jTableDivisions.getModel();
          tm.setRowCount(0);
        for (Division division : divisionsList) {
            Object[] rowData = {division.getDivisionId(), division.getDivisionName()};
            tm.addRow(rowData);
        }
    }

