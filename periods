    private void formInternalFrameOpened(javax.swing.event.InternalFrameEvent evt) {                                         
        getAllPeriods();
        getAllGroups();

       
        
         ////2- Fill Department JCombo
        jComboBoxDays.insertItemAt("", 0);
        jComboBoxDays.setSelectedIndex(0);
        jComboBoxDays.removeAllItems();

        LinkedHashMap<String, Integer> DaysHM = DayHandler.getAllDaysMap();
        for (String dayName : DaysHM.keySet()) {
            jComboBoxDays.addItem(dayName);
            System.out.println("Add : " + dayName);
        }

         ////2- Fill Division JCombo
        jComboBoxStartTime.insertItemAt("", 0);
        jComboBoxStartTime.setSelectedIndex(0);
        jComboBoxStartTime.removeAllItems();

        LinkedHashMap<String, Integer> StartTimingHM = PeriodTimingHandler.getAllPeriodsTimingMap();
        for (String startTimeText : StartTimingHM.keySet()) {
            jComboBoxStartTime.addItem(startTimeText);
            System.out.println("Add : " + startTimeText);
        }

           ////2- Fill Division JCombo
        jComboBoxEndTime.insertItemAt("", 0);
        jComboBoxEndTime.setSelectedIndex(0);
        jComboBoxEndTime.removeAllItems();

        LinkedHashMap<String, Integer> EndTimingHM = PeriodTimingHandler.getAllPeriodsTimingMap();
        for (String endTimeText : EndTimingHM.keySet()) {
            jComboBoxEndTime.addItem(endTimeText);
            System.out.println("Add : " + endTimeText);
        }
        
    }                                        

    private void jButtonCancelPeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        emptyFieldsPeriods();
    }                                                   

    private void jButtonDeletePeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            //1. read user id
            int periodId = Integer.parseInt(jTextFieldPeriodId.getText());
            // String logDeletedConsolateName = LecturerHandler.getLecturerById(divisionId).getLecturerName();
            //2. del from db
            PeriodHandler.deletePeriod(periodId);

            // 3. remove From JTable
            DefaultTableModel tm = (DefaultTableModel) jTablePeriod.getModel();
            tm.removeRow(jTablePeriod.getSelectedRow());

            // 4. empty Fields
            emptyFieldsPeriods();
            //   LogHandler.insertLog(9, 3, "Delete Consolate Ok - Consolate  : " + logDeletedConsolateName);
        }

    }                                                   

    private void jButtonUpdatePeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            // 1, Read Fields
            int periodId = Integer.parseInt(jTextFieldPeriodId.getText());
            String periodName = jTextFieldPeriodName.getText();
            String dayName = (String) jComboBoxDays.getSelectedItem();
            String startTimeText = (String) jComboBoxStartTime.getSelectedItem();
            String endTimeText = (String) jComboBoxEndTime.getSelectedItem();

            Period period = new Period(periodId, periodName, DayHandler.getDayByName(dayName),
            PeriodTimingHandler.getPeriodTimingByName(startTimeText),
               PeriodTimingHandler.getPeriodTimingByName(endTimeText)
            );

            // 2. update DB
            PeriodHandler.updatePeriod(period);

            // 3. update JTable
            jTablePeriod.setValueAt(periodId, jTablePeriod.getSelectedRow(), 0);
            jTablePeriod.setValueAt(periodName, jTablePeriod.getSelectedRow(), 1);
            jTablePeriod.setValueAt(dayName, jTablePeriod.getSelectedRow(), 2);
            jTablePeriod.setValueAt(startTimeText, jTablePeriod.getSelectedRow(), 3);
            jTablePeriod.setValueAt(endTimeText, jTablePeriod.getSelectedRow(), 4);

            // 4. Empty Fields
            emptyFieldsPeriods();

            //   LogHandler.insertLog(8, 3, "Update Lecture Ok - Lecture : " + divisionName);
        }

    }                                                   

    private void jButtonAddPeriodActionPerformed(java.awt.event.ActionEvent evt) {                                                 

        int optionChoosen = JFrameMaster.checkConfirm();
        if (optionChoosen == JOptionPane.YES_OPTION) {
            // 0. read Fields
            String periodName = jTextFieldPeriodName.getText();

            String dayName = (String) jComboBoxDays.getSelectedItem();
            String startTimeText = (String) jComboBoxStartTime.getSelectedItem();
            String endTimeText = (String) jComboBoxEndTime.getSelectedItem();
            

            Period period = new Period(periodName, DayHandler.getDayByName(dayName),
           PeriodTimingHandler.getPeriodTimingByName(startTimeText),
            PeriodTimingHandler.getPeriodTimingByName(endTimeText)
            );

            // 1. Add row to DB
            PeriodHandler.insertPeriod(period);

            // 2. Add row to JTable
            DefaultTableModel tm = (DefaultTableModel) jTablePeriod.getModel();
            Object[] rowData = {period.getPeriodId(), period.getPeriodName()};

            tm.addRow(rowData);

            /// refresh
            tm.setRowCount(0);
            getAllPeriods();

            // 3. Empty fields
            emptyFieldsPeriods();

            // 4. show Save Msg
            JOptionPane.showMessageDialog(null, "Data Saved Done", "Saving..", JOptionPane.INFORMATION_MESSAGE);

            //   LogHandler.insertLog(7, 3, "Create lecturer Ok - lecturer : " + lecturerName);
        }

    }                                                

    private void jTablePeriodMouseClicked(java.awt.event.MouseEvent evt) {                                          

        Integer periodId = (Integer) jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 0);
        String periodName = (String) jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 1);
        System.out.println("day = "+ jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 2));
        String dayName = (String) jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 2);
        String startTimeText = (String) jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 3);
        String endTimeText = (String) jTablePeriod.getValueAt(jTablePeriod.getSelectedRow(), 4);

        jTextFieldPeriodId.setText(periodId.toString());
        jTextFieldPeriodName.setText(periodName);
        jComboBoxDays.setSelectedItem(DayHandler.getDayByName(dayName).getDayName());
        jComboBoxStartTime.setSelectedItem(PeriodTimingHandler.getPeriodTimingByName(startTimeText).getTimeText());
       jComboBoxStartTime.setSelectedItem(PeriodTimingHandler.getPeriodTimingByName(endTimeText).getTimeText());


    }                                         

    public void getAllGroups() {


    }

    public void getAllPeriods() {
        // 1. Get All Software From DB
        ArrayList<Period> periodsList = PeriodHandler.getAllPeriods();

        // 2. Add Rows to JTable
        DefaultTableModel tm = (DefaultTableModel) jTablePeriod.getModel();

        for (Period period : periodsList) {
            Object[] rowData = {period.getPeriodId(), period.getPeriodName(),
                period.getDay().getDayName(),
            period.getStartTime().getTimeText(),
            period.getEndTime().getTimeText()};

            tm.addRow(rowData);
        }

    }

    private void emptyFieldsPeriods() {
        jTextFieldPeriodId.setText("");
        jTextFieldPeriodName.setText("");
        jComboBoxDays.setSelectedIndex(0);
        jComboBoxStartTime.setSelectedIndex(0);
        jComboBoxEndTime.setSelectedIndex(0);

    }

    private void emptyFieldsGroups() {
//        jTextFieldGroupId.setText("");
//        jTextFieldGroupName.setText("");
    }

